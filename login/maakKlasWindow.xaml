<Window x:Class="ProjectChallenge.login.maakKlasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="maakKlasWindow" Height="198" Width="301.333"
        WindowStyle="None">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="#FFE8CE71" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Name="nieuweKlasButton" Content="Maak klas aan" HorizontalAlignment="Left" Margin="169,131,0,0" VerticalAlignment="Top" Width="116" Height="50" Click="nieuweKlasButton_Click"/>
        <TextBox Name="nieuweKlasTextBox" HorizontalAlignment="Left" Height="60" Margin="10,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275"/>
        <Button x:Name="nieuweKlasButton_Copy" Content="Terug" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Width="117" Height="50" Click="terugButton_Click"/>
        <Label Content="Maak nieuwe klas:" HorizontalContentAlignment="Center" FontFamily="Comic Sans MS" FontSize="25" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="275" Height="44"/>

    </Grid>
</Window>
