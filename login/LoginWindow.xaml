<Window x:Class="ProjectChallenge.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="228" Width="300"
        WindowStyle="None"
        >
    <Grid Margin="0,0,0.333,-0.333" Height="199" VerticalAlignment="Top">
        <TextBox Name="idTextBox" HorizontalAlignment="Left" Height="23" Margin="10,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="passwordTextBox" HorizontalAlignment="Left" Height="23" Margin="163,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="loginButton" Content="Log in" HorizontalAlignment="Left" Margin="178,132,0,0" VerticalAlignment="Top" Width="84" Click="loginButton_Click" Height="29"/>
        <Button x:Name="backButton_Copy" Content="Terug" HorizontalAlignment="Left" Margin="26,132,0,0" VerticalAlignment="Top" Width="84" Click="backButton_Click" Height="29"/>
        <Label Content="Gebruiker id:" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Wachtwoord:" HorizontalAlignment="Left" Margin="163,30,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
