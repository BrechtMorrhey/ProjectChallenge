<Window x:Class="ProjectChallenge.ScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScoreWindow" Height="300" Width="300" Loaded="Window_Loaded"
        WindowStyle="None">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE8CE71" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock x:Name="naamTextBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="naamPlaceholder" VerticalAlignment="Top"/>
        <TextBlock x:Name="klasTextBlock" HorizontalAlignment="Left" Margin="10,31,0,0" TextWrapping="Wrap" Text="klasPlaceholder" VerticalAlignment="Top"/>
        <ListBox x:Name="scoreListBox" HorizontalAlignment="Left" Height="231" Margin="10,52,0,0" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="gameButton" Content="Game" HorizontalAlignment="Left" Margin="141,10,0,0" VerticalAlignment="Top" Width="55" Click="gameButton_Click" Height="37"/>
        <Button x:Name="menuButton" Content="Terug &#xD;&#xA;naar menu" HorizontalAlignment="Left" Margin="201,10,0,0" VerticalAlignment="Top" Width="82" Click="menuButton_Click" HorizontalContentAlignment="Center" Height="37"/>

    </Grid>
</Window>
