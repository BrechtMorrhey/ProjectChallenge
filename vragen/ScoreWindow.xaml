<Window x:Class="ProjectChallenge.ScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScoreWindow" Height="300" Width="300" Loaded="Window_Loaded"
        WindowStyle="None">
    <Grid>
        <TextBlock x:Name="naamTextBlock" HorizontalAlignment="Left" Margin="10,16,0,0" TextWrapping="Wrap" Text="naamPlaceholder" VerticalAlignment="Top"/>
        <TextBlock x:Name="klasTextBlock" HorizontalAlignment="Left" Margin="200,16,0,0" TextWrapping="Wrap" Text="klasPlaceholder" VerticalAlignment="Top"/>
        <ListBox x:Name="scoreListBox" HorizontalAlignment="Left" Height="231" Margin="10,52,0,0" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="gameButton" Content="Game" HorizontalAlignment="Left" Margin="106,14,0,0" VerticalAlignment="Top" Width="75" Click="gameButton_Click"/>

    </Grid>
</Window>
